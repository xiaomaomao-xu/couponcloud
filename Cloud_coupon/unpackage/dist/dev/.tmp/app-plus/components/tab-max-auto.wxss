page, .content{
        height: 100%;
}
.swiper-box{
        height: 100%;
}
.auto-list-scroll-content{
        height: 100%;
}
    /* tabbars */
.auto-tab{
      width: 750rpx;
      height: auto;
      box-sizing: border-box;
}
.auto-navbar{
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        height: 80rpx;
        line-height: 80rpx;
        padding: 0 5rpx;
        background: #fff;
        box-shadow: 0 1rpx 5rpx rgba(0,0,0,.06);
        position: relative;
        font-size: 30rpx;
        z-index: 10;
}
.auto-nav-item{
                -webkit-box-flex: 1;
                -webkit-flex: 1;
                        flex: 1;
                display: -webkit-box;
                display: -webkit-flex;
                display: flex;
                -webkit-box-pack: center;
                -webkit-justify-content: center;
                        justify-content: center;
                -webkit-box-align: center;
                -webkit-align-items: center;
                        align-items: center;
                height: 100%;
                color: #303133;
                position: relative;
}
.current{
                    color: #fa436a;
}
.current:after{
                    content: '';
                    position: absolute;
                    left: 50%;
                    bottom: 0;
                    -webkit-transform: translateX(-50%);
                            transform: translateX(-50%);
                    transition: all .4s;
                    -webkit-transition: all .4s;
                    width: 100rpx;
                    height: 0;
                    border-bottom: 2rpx solid #fa436a;
}
    /* swiper-scroll */
.uni-swiper-item{
        height: auto;
}
