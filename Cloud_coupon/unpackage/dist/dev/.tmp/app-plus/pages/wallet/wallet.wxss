.wallet_view{width: 90%;height: auto;margin: 40rpx 5%;overflow: hidden;background: #eb6100;border-radius: 20rpx;padding: 20rpx 0;-webkit-box-sizing: border-box;box-sizing: border-box;}
.wallet_view>view{width: 100%;font-size: 1rem;font-weight: bold;color: white;text-align: center;padding: 0 0 20rpx 0;-webkit-box-sizing: border-box;box-sizing: border-box;}
.wallet_view>view:first-child{padding: 0rpx !important;}
.view_pic image{width: 150rpx;height: 150rpx;}
.wallet_view>view:nth-of-type(4){font-size: 0.7rem;}
.wallet_el{width: 100%;height: auto;overflow: hidden;}
.wallet_el>view{width: 50%;height: auot;overflow: hidden;text-align: center;float: left;}
.wallet_el>view>view:nth-of-type(2){font-size: 1rem;}
.recharge,.withdrawal{width: 80%;font-size: 0.9rem;color: white;padding: 30rpx 0;-webkit-box-sizing: border-box;box-sizing: border-box;border-radius: 20rpx;margin: 40rpx 10%;text-align: center;}
.recharge{background: #eb6100;margin-top: 200rpx;}
.withdrawal{background: #AAAAAA;}

