.follow_box{width: 100%;height: auto;overflow: hidden;}
.post_titile{width: 90%;margin: 0 5%;height: auto;overflow: hidden;border-bottom: 1px solid #EAEAEA;}
.post_new{width: 100%;height: auto;overflow: hidden;}
.new_le{width: 70%;float: left;padding: 20rpx 0;-webkit-box-sizing: border-box;box-sizing: border-box;}
